{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@repo/store/*": ["packages/store/*"],
      "@repo/types/*": ["packages/types/*"],

      "@repo/lib": ["packages/lib/index.ts"],
      "@repo/lib/*": ["packages/lib/*"],

      "@repo/hooks/*": ["packages/hooks/*"],

      "@repo/ui": ["packages/ui/src/index.ts"],
      "@repo/ui/*": ["packages/ui/src/*"],

      "@repo/config": ["packages/config/index.ts"],
      "@repo/config/*": ["packages/config/*"],

      "@repo/scheduler": ["packages/scheduler/index.ts"],
      "@repo/scheduler/*": ["packages/scheduler/*"],

      // ðŸ‘‰ maps @/ to the web app root
      "@/*": ["apps/web/*"],
      "@components/*": ["apps/web/components/*"]
    }
  },
  "include": ["apps", "packages"]
}
